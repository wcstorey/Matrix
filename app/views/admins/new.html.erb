
<% if flash[:danger]  %>
<% flash[:danger].each do |field, error| %>
  </span>Entry for <%= field %>: <%= error.join("") %><br></span>
  <% end %>
<% end %><br>

<%= form_for @admin do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>
  <br>
  <%=f.submit %>
<% end %>