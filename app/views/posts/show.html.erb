<%= link_to "back to #{@category.name}", category_posts_path%>

<h1><%= @post.title %> </h1>

<% if current_user && @post.user_id == current_user.id %>
  <span><%= link_to 'edit', edit_category_post_path(@post.category, @post) %></span>

  <span><%= link_to 'delete', category_post_path(@post.category, @post), :method => :delete %></span>
<% end %>

<p><%= @post.content %></p>

<% if current_user %>
  <%= link_to "Reply To This Post", new_category_post_path(:category_id => @category.id, :parent_id => @post.id)%>
<% end %>
<ul>
<% @post.children.each do |comment| %>
  <li class="comment"><%= render partial: 'post_comments', :locals => { :post =>  comment } %></li>
<% end %>
</ul>
