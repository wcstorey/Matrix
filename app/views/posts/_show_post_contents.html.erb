<div class="post_wrapper">
  <h3> at <%= @post.created_at %>, <%= @post.user.username%> wrote:</h2>
  <h2><%= @post.title %> </h2>
  <p><%= @post.content %></p>

  <div class="vote">
    <%= link_to 'Upvote', votes_path, method: 'POST' %>
  </div>
  <div class="vote">
    <%= link_to 'Downvote', vote_path(@post.id), method: 'DELETE' %>
  </div>
  <p><%= @post.votes.count %> Votes</p>
</div>

<% if current_user && @post.user_id == current_user.id %>
  <span><%= link_to 'edit', edit_category_post_path(@post.category, @post) %></span><br>
  <span><%= link_to 'delete', category_post_path(@post.category, @post), :method => :delete %></span><br>
<% end %>

<% if current_user %>
  <%= link_to "Reply To This Post", new_category_post_path(:category_id => @category.id, :parent_id => @post.id)%>
<% end %>

<ul>
<% @post.children.each do |comment| %>
  <li class="comment"><%= render partial: 'show_post_contents', :locals => { :@post => comment } %></li>
<% end %>
</ul>
